@model Student
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<link rel="stylesheet" href="~/css/editProfile.css" />
<section>
    <h2 class="text-center text-primary">
        <i class="fa-solid fa-pen-to-square"></i> Edit Your Data
    </h2>
    <form method="post" enctype="multipart/form-data" 
          class="edit d-flex flex-column align-items-center justify-content-between">
        <!-- first name / last name -->
        <div class="container row">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">First Name</h4>
                <input type="text"
                       class="form-control"
                        value="@Model.FirstName"  
                        asp-for="FirstName"/>
         <span asp-validation-for="FirstName" class="text-danger"></span>

            </div>
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Last Name</h4>
                <input type="text"
                       class="form-control"
                       value="@Model.LastName"  
                       asp-for="LastName"
                       />
                  <span asp-validation-for="LastName" class="text-danger"></span>

            </div>
        </div>
        <!-- birth daye/ Gender -->
        <div class="container row">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Date of Birth</h4>
                <input type="date" class="form-control" asp-for="birthday"  />
                   <span asp-validation-for="birthday" class="text-danger"></span>

            </div>
           <div class="col-sm-6 form-group">
            <label for="sex">Gender</label>
            <select id="sex" class="form-control browser-default custom-select"  asp-for="Gender">
            <option value="@Model.Gender" >@Model.Gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>
                       <span asp-validation-for="Gender" class="text-danger"></span>

        </div>
        </div>
        <!-- birth daye/ Gender -->
        <div class="container row">
           <div class="col-sm-6 form-group">
            <label for="year">Year</label>
            <select id="year" class="form-control browser-default custom-select"   asp-for="Year">

            <option value="@Model.Year">@Model.Year</option>

            <option value=>Frist Year</option>
            <option value=2>Second Year</option>
            <option value=3>Third Year</option>

             </select>
             <span asp-validation-for="Year" class="text-danger"></span>

        </div>
           
             <div class="col-12 col-md-6">
                    <h4 class="text-primary">National ID</h4>
                    <input type="tel" class="form-control" value="@Model.national_Id" asp-for="national_Id"/>
                   <span asp-validation-for="national_Id" class="text-danger"></span>

                </div>
        </div>

         
        <!-- birth daye/ Gender -->
        <div class="container row">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Phone</h4>
                <input type="tel" class="form-control" asp-for="Phone" value="@Model.Phone"/>
                      <span asp-validation-for="Phone" class="text-danger"></span>

            </div>
            
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Father Phone</h4>
                <input type="tel" class="form-control" value="@Model.FatherPhone" asp-for="FatherPhone"/>
               <span asp-validation-for="FatherPhone" class="text-danger"></span>

            </div>
           
        </div>
          <div class="container row">
             <div class="col-12 col-md-6" style="width:100px; height:100px;margin-right:15px;" >
                    <img class="user-photo" alt="user image" src="~/images/@Model.Picture" style=" width:100px; height:100px;border:3px solid" />
                </div>
                <div class="col-12 col-md-6">
                    <h4 class="text-primary">Chang your Picture</h4>
                    <input type="file" class="form-control" asp-for="Picture" name="Picture" />
               <span asp-validation-for="Picture" class="text-danger"></span>

                </div>
                <br />
         </div>
          <button id="submit" class="btn btn-primary offset-5 mt-4 mb-3" asp-route-sId="@Model.Id" asp-action="UpdateStudent" asp-controller="Profile"  >
                            <i class="fa-solid fa-pen-to-square"></i>SaveEdit

            </button>
       
    </form>
</section>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



                





          