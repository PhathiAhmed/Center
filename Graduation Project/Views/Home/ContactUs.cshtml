@model ContactUs
<link rel="stylesheet" href="~/css/ContactUs.css" />
<div class="content">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">


                <div class="row justify-content-center">
                    <div class="col-md-6">

                        <h3 class="heading mb-4 text-primary">Let's talk about everything!</h3>
                        <p></p>

                        <p><img src="~/Home/img/undraw-contact.svg" alt="Image" class="img-fluid"></p>


                    </div>
                    <div class="col-md-6">

                        <form class="mb-5" method="post" id="contactForm" >
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control"   id="name" placeholder="Your name" asp-for="Name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control"   id="email" placeholder="Email" asp-for="Email" required>
                             
                                </div>
                                     <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control"   id="subject" placeholder="Subject" asp-for="Subject" required>
                                </div>
                                     <span asp-validation-for="Subject" class="text-danger"></span>

                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <textarea class="form-control" asp-for="Message"  id="message" cols="30" rows="7" placeholder="Write your message" ></textarea>
                                </div>
                                      <span asp-validation-for="Message" class="text-danger"></span>

                            </div>
                            <div class="text-center text-lg-start ">
                                <button type="submit" class="btn btn-primary btn-lg form-control form-control-lg" asp-action="ContactUs">
                                    <i class="fa-solid fa-check"></i>
                                    Send Messege
                                </button>

                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
