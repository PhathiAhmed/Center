<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/fontawesome-free-6.2.0-web/css/all.css" />
    <!-- Libraries Stylesheet -->
    <link href="~/Home/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet & CSS -->
    <link href="~/Home/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Home/lib/bootstrap/dist/css/bootstrap.min.css" />




</head>
<body>

    <!-- Navbar Start -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-white navbar-info py-3 py-lg-0 px-lg-5">
            @if (User.Identity.IsAuthenticated == true)
            {

                <a asp-action="Index" asp-controller="HomePosts" class="navbar-brand ml-lg-3">
                    <h1 class="m-0 text-uppercase text-primary">
                        <i class="fa-solid fa-graduation-cap"></i>
                        El Tamayez
                    </h1>
                </a>
            }
            else
            {
                <a asp-action="Index" asp-controller="Home" class="navbar-brand ml-lg-3">
                    <h1 class="m-0 text-uppercase text-primary">
                        <i class="fa-solid fa-graduation-cap"></i>
                        El Tamayez
                    </h1>
                </a>
            }
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-lg-3" id="navbarCollapse">
                <div class="navbar-nav mx-auto py-0">
                    @*if(you don't authenticated)*@
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">
                            <i class="fa-solid fa-house-chimney"></i>
                            Home
                        </a>
                        <a asp-action="ContactUs" asp-controller="Home" class="nav-item nav-link">
                            <i class="fa-solid fa-message"></i>
                            Contact Us
                        </a>
                        @*if(you don't authenticated)*@
                        <a asp-action="Register" asp-controller="Home" class="nav-item nav-link">
                            <i class="fa-solid fa-address-card"></i>
                            Register
                        </a>
                        <a asp-action="Login" asp-controller="Login" class="nav-item nav-link">
                            <i class="fa-solid fa-user"></i>
                            Login
                        </a>
                    }
                    else
                    {

                        <a asp-action="Index" asp-controller="HomePosts" class="nav-item nav-link active">
                            <i class="fa-solid fa-house-chimney"></i>
                            Home
                        </a>
                        @*Comment For Now Only*@
                        @if (User.IsInRole("Admin"))
                        {

                            <a asp-area="Admin" asp-action="Index" asp-controller="Home" class="nav-item nav-link">
                                <i class="fa-solid fa-user-tie"></i>

                                Go To Dashboard
                            </a>
                        }
                        else
                        {
                            <a asp-action="Index" asp-controller="MyCourses" class="nav-item nav-link">
                                <i class="fa-solid fa-book-bookmark"></i>
                                Subjects
                            </a>
                            <a asp-action="Index" asp-controller="Profile" class="nav-item nav-link">
                                <i class="fa-solid fa-user-tie"></i>
                                Profile
                            </a>
                        }


                        <a asp-action="logout" asp-controller="Login" class="nav-item nav-link">
                            <i class="fa-solid fa-user"></i>
                            Logout
                        </a>

                    }
                </div>

            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    @*if(you authenticated)*@
    <!-- Header Start -->

    <div class="jumbotron jumbotron-fluid position-relative overlay-bottom" style="margin-bottom: 90px;">
        <div class="container text-center my-5 py-5">
            @if (User.Identity.IsAuthenticated == false)
            {
                <h1 class="text-white mt-4 mb-4">Learn At El Tamayez</h1>
                <h1 class="text-white display-1 mb-5">Educational Center</h1>

            }
        </div>
    </div>

    <!-- Header End -->

    <div>
        @RenderBody()
        @await RenderSectionAsync("Scripts", required: false)

    </div>

    <!-- Start Back to Top -->
    <a href="#" class="btn btn-lg btn-primary rounded-0 btn-lg-square back-to-top">
        <i class="fa fa-angle-double-up"></i>
    </a>
    <!-- End Back to Top -->

    <div class="container-fluid position-relative overlay-top bg-primary text-dark-50 py-5" style="margin-top: 90px;">
        <div class="container mt-5 pt-5 ">
            <div class="row">
                <div class="col-md-6 mb-5 m-auto" style=" text-ali">
                    <a href="index.html" class="navbar-brand">
                        <h1 class="mt-n2 text-uppercase text-white">
                            <i class="fa-solid fa-graduation-cap"></i>
                            El Tamayez
                        </h1>
                    </a>
                    <p class="m-0">
                        Accusam nonumy clita sed rebum kasd eirmod elitr. Ipsum ea lorem at et diam est, tempor rebum ipsum sit ea tempor stet et consetetur dolores. Justo stet diam ipsum lorem vero clita diam
                    </p>
                </div>

            </div>
            <div class="row">
                <div class="col-md-4 mb-5">
                    <h3 class="text-white mb-4">Get In Touch</h3>
                    <p><i class="fa fa-map-marker-alt mr-2"></i>El Santa, Tanta</p>
                    <p><i class="fa fa-phone-alt mr-2"></i>+020XXXXXXXXX</p>
                    <p><i class="fa fa-envelope mr-2"></i>info@eltamayez.com</p>
                    <div class="d-flex justify-content-start mt-4">
                        <a class="text-white mr-4" href="#"><i class="fab fa-2x fa-twitter"></i></a>
                        <a class="text-white mr-4" href="#"><i class="fab fa-2x fa-facebook-f"></i></a>
                        <a class="text-white mr-4" href="#"><i class="fab fa-2x fa-linkedin-in"></i></a>
                        <a class="text-white" href="#"><i class="fab fa-2x fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-5">
                    <h3 class="text-white mb-4">Our Subjects</h3>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-white-50 mb-2"><i class="fa fa-angle-right mr-2"></i>Arabic</a>
                        <a class="text-white-50 mb-2"><i class="fa fa-angle-right mr-2"></i>English</a>
                        <a class="text-white-50 mb-2"><i class="fa fa-angle-right mr-2"></i>Math</a>
                        <a class="text-white-50 mb-2"><i class="fa fa-angle-right mr-2"></i>French</a>

                    </div>
                </div>
                <div class="col-md-4 mb-5">
                    <h3 class="text-white mb-4">Quick Links</h3>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-white-50" asp-action="Register" asp-controller="MyCourses"><i class="fa fa-angle-right mr-2"></i>Register</a>

                        <a class="text-white-50" asp-action="#" asp-controller="#"><i class="fa fa-angle-right mr-2"></i>Contact Us</a>

                        <a class="text-white-50 mb-2" asp-action="#" asp-controller="#"><i class="fa fa-angle-right mr-2"></i>Terms & Condition</a>

                        <a class="text-white-50 mb-2" asp-action="#" asp-controller="#"><i class="fa fa-angle-right mr-2"></i>Help & Support</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-primary text-dark-50 border-top py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-left mb-3 mb-md-0">
                    <p class="m-0">
                        Copyright &copy;
                        <a class="text-white" href="#">
                            <i class="fa-solid fa-graduation-cap"></i>
                            El Tamayez
                        </a>
                        . All Rights Reserved.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-right">
                    <p class="m-0">
                        Designed by
                        <a class="text-white">
                            ITI Team
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- JavaScript Libraries -->
    <script src="~/Home/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Home/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Home/lib/easing/easing.min.js"></script>
    <script src="~/Home/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Home/lib/counterup/counterup.min.js"></script>
    <script src="~/Home/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Home/js/main.js"></script>
</body>
</html>
