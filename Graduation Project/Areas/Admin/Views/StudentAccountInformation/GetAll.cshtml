@model StudentAccountInformationVModel


<h2>Registered Students</h2>




   

    <div id="wrapper">
        <div class="content-wrapper container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title">
                        <h1>Student Account Information <small></small></h1>
                        <ol class="breadcrumb">
                            <li><a href="#"><i class="fa fa-home"></i></a></li>
                            <li class="active">Student</li>
                        </ol>
                    </div>
                </div>
            </div><!-- end .page title-->
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-card ">
                        <!-- Start .panel -->
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                All Registered Students
                            </h4>
                            <div class="panel-actions">
                                <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                                <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table id="basic-datatables" class="table table-bordered text-center">
                                    <thead>
                                        <tr>
                                            <th>FirstName</th>
                                            <th>LastName</th>
                                            <th>Password</th>
                                            <th>User Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Students)
                                        {
                                             
                                                <tr>
                                                        <td>@item.FirstName</td>
                                                        <td>@item.LastName</td>
                                                        <td>@item.national_Id@@@item.FirstName.ToUpper()@item.LastName.ToLower()</td>
                                                        <td>@item.Account.UserName</td>
                                                            
                                                </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- End .panel -->
                </div><!--end .col-->
            </div><!--end .row-->


        </div><div style="clear:both;"></div>
    </div>


@section Scripts
{
    <script src="~/Admin/js/data-tables/jquery.dataTables.js"></script>
    <script src="~/Admin/js/data-tables/dataTables.tableTools.js"></script>
    <script src="~/Admin/js/data-tables/dataTables.bootstrap.js"></script>
    <script src="~/Admin/js/data-tables/dataTables.responsive.js"></script>
    <script src="~/Admin/js/data-tables/tables-data.js"></script>
}




