@model RegisterStudentAllAccountVM
<link href="~/Admin/css/bootstrap-wysihtml5.css" rel="stylesheet">

<link href="~/Admin/css/awesome-bootstrap-checkbox.css" rel="stylesheet">



   

    <div id="wrapper">
        <div class="content-wrapper container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title">
                        <h1>Register Student<small></small></h1>
                        <ol class="breadcrumb">
                            <li><a href="#"><i class="fa fa-home"></i></a></li>
                            <li class="active">Student</li>
                        </ol>
                    </div>
                </div>
            </div><!-- end .page title-->

            <div class="row">

                <div class="col-md-10">
                    <div class="panel panel-card margin-b-30">
                        <!-- Start .panel -->
                        <div class="panel-heading">
                            <h4 class="panel-title">  </h4>
                            <div class="panel-actions">
                                <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                                <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
                            </div>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" method="post" role="form" asp-controller="Teacher" asp-action="Add">

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">First Name</label>

                                    <div class="col-lg-10">
                                        <input asp-for="register.FirstName" type="text"  placeholder="Please enter First Name" class="form-control" >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label"> Last Name</label>

                                    <div class="col-lg-10">
                                        <input asp-for="register.LastName" type="text" placeholder="Please enter Last Name" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Phone</label>

                                    <div class="col-lg-10">
                                        <input asp-for="register.Phone" type="number" placeholder="Please enter Phone" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Year</label>

                                    <div class="col-lg-10">
                                        <select asp-for="register.Year" asp-items="Html.GetEnumSelectList<Year>()" class="form-control">
                                            <option>--Select Year--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Gender</label>

                                    <div class="col-lg-10">
                                        <select asp-for="register.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                                            <option>--Select Gender--</option>
                                        </select>
                                         
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Birthday</label>

                                    <div class="col-lg-10">
                                        <input asp-for="register.birthday" type="date" placeholder="Please enter Birthday" class="form-control">
                                    </div>
                                </div> <div class="form-group">
                                    <label class="col-lg-2 control-label">NationalId</label>

                                    <div class="col-lg-10">
                                        <input asp-for="register.national_Id" type="text" placeholder="Please enter NationalId" class="form-control">
                                    </div>
                                </div> <div class="form-group">
                                    <label class="col-lg-2 control-label">PhoneFather</label>

                                    <div class="col-lg-10">
                                        <input asp-for="register.FatherPhone" type="text" placeholder="Please enter PhoneFather" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">UserName</label>

                                    <div class="col-lg-10">
                                        <input asp-for="StudentRegisterVM.UserName" type="text" value="" placeholder="Please enter UserName" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Email</label>

                                    <div class="col-lg-10">
                                        <input asp-for="StudentRegisterVM.Email" type="email" value="@Model.register.FirstName@Model.register.LastName@@eltamayez.com" placeholder="Please enter Email" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">  Password</label>

                                    <div class="col-lg-10">
                                        <input asp-for="StudentRegisterVM.Password" type="text" value="@Model.register.national_Id@@@Model.register.FirstName.ToUpper()@Model.register.LastName.ToLower()" placeholder="Please enter Password  " class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button asp-controller="RegisterStudentAccount" asp-action="Register" class="btn btn-info">
                                            Create
                                        </button>
                                       @* <button asp-controller="Student" asp-action="GetAllStudents" class="btn btn-danger">
                                            Cancel
                                        </button>*@
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

